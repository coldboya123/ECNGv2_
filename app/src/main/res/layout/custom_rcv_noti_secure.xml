<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/noti_secure_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/noti_secure_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noti_secure_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:drawableStart="@drawable/ic_dagiao"
        android:drawablePadding="5dp"
        android:text="Đã xem"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/noti_secure_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noti_secure_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/noti_secure_date" />

    <TextView
        android:id="@+id/noti_secure_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem chi tiết"
        android:textColor="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noti_secure_content" />
</androidx.constraintlayout.widget.ConstraintLayout>