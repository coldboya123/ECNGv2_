<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingHorizontal="20dp">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã đơn hàng "
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_3"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/textsize_3"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/txt_id"
        app:layout_constraintTop_toTopOf="@id/txt_id" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_vieworder"
        app:layout_constraintTop_toBottomOf="@id/txt_id"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/textsize_3"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        android:textStyle="bold"
        android:text="Xem đơn hàng"
        android:textAllCaps="false"
        android:background="@drawable/background_radius_primary_color5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/money"
        app:layout_constraintTop_toTopOf="@id/txt_id"
        app:layout_constraintBottom_toBottomOf="@id/btn_vieworder"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/textsize_6"
        android:textStyle="bold"
        android:textColor="@color/green"/>
    <TextView
        android:id="@+id/date"
        app:layout_constraintEnd_toEndOf="@id/money"
        app:layout_constraintBottom_toBottomOf="@id/btn_vieworder"
        android:textSize="@dimen/textsize_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/primary_color"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>