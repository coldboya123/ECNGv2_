            <TextView
                android:id="@+id/shop_shop_hint_name4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingHorizontal="5dp"
                android:text="Chung cư cao cấp Quận 1 có lorem lorem ..."
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/shop_shop_hint_avatar4"
                app:layout_constraintTop_toTopOf="parent" />

            <RatingBar
                android:id="@+id/shop_shop_hint_rating4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:isIndicator="true"
                android:numStars="5"
                android:paddingTop="0dp"
                android:rating="5"
                android:theme="@style/RatingBarSmallTheme"
                app:layout_constraintStart_toEndOf="@id/shop_shop_hint_avatar4"
                app:layout_constraintTop_toBottomOf="@id/shop_shop_hint_name4" />

            <TextView
                android:id="@+id/shop_shop_hint_price4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="5dp"
                android:text="2.000.000.000 đ"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/textsize_3"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/shop_shop_hint_avatar4"
                app:layout_constraintStart_toEndOf="@id/shop_shop_hint_avatar4"
                app:layout_constraintTop_toBottomOf="@id/shop_shop_hint_rating4" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>