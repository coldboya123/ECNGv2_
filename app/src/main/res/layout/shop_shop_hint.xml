<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/shop_shop_hint_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:text="Gợi Ý Cho Bạn"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_4"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/shop_shop_hint_item1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shop_shop_hint_txt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chungcu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingHorizontal="1dp"
                android:text="Chung cư cao cấp Quận 1 có lorem lorem ..."
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingVertical="5dp"
                android:text="2.000.000.000 đ"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/textsize_4"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/shop_shop_hint_item2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/shop_shop_hint_item3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shop_shop_hint_item1"
        app:layout_constraintTop_toTopOf="@id/shop_shop_hint_item1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/shop_shop_hint_avatar2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chungcu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/shop_shop_hint_name2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingHorizontal="5dp"
                android:text="Chung cư cao cấp Quận 1 có lorem lorem ..."
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/shop_shop_hint_avatar2"
                app:layout_constraintTop_toTopOf="parent" />

            <RatingBar
                android:id="@+id/shop_shop_hint_rating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:isIndicator="true"
                android:numStars="5"
                android:paddingTop="0dp"
                android:rating="5"
                android:theme="@style/RatingBarSmallTheme"
                app:layout_constraintStart_toEndOf="@id/shop_shop_hint_avatar2"
                app:layout_constraintTop_toBottomOf="@id/shop_shop_hint_name2" />

            <TextView
                android:id="@+id/shop_shop_hint_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="5dp"
                android:text="2.000.000.000 đ"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/textsize_3"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/shop_shop_hint_avatar2"
                app:layout_constraintStart_toEndOf="@id/shop_shop_hint_avatar2"
                app:layout_constraintTop_toBottomOf="@id/shop_shop_hint_rating2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/shop_shop_hint_item3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
