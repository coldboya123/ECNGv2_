<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="2dp"
    android:background="@color/white">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/payment_product_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/laptop4"/>
        <LinearLayout
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/payment_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Điện thoại Ipad 12 pro 2020"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/payment_product_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng: 2"/>
        </LinearLayout>
        <TextView
            android:id="@+id/payment_product_price"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.000.000 đ"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:paddingEnd="10dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>