<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/noti_order_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noti_order_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/noti_order_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/noti_order_img"
        app:layout_constraintTop_toTopOf="@id/noti_order_img" />

    <TextView
        android:id="@+id/noti_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/noti_order_img"
        app:layout_constraintStart_toStartOf="@id/noti_order_name"
        app:layout_constraintTop_toBottomOf="@id/noti_order_name" />

    <TextView
        android:id="@+id/noti_order_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem chi tiáº¿t"
        android:textColor="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="@id/noti_order_img"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>