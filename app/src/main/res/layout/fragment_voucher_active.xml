            app:layout_constraintStart_toEndOf="@id/voucher_line1"
            app:layout_constraintTop_toTopOf="@id/voucher_title1" />

        <TextView
            android:id="@+id/voucher_percent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Giảm 40% đơn giá"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_4"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/voucher_shop1"
