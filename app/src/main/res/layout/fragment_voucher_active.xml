<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_2"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".View.Payment.PaymentSuccessActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_voucher"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/voucher_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3333" />

        <TextView
            android:id="@+id/voucher_title"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_radius_primary_color"
            android:gravity="center"
            android:lines="2"
            android:text="ƯU ĐÃI THÀNH VIÊN"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_4"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/voucher_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/voucher_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/ic_shop_dark"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="apple_long_butterfly"
            android:textSize="@dimen/textsize_4"
            app:layout_constraintStart_toEndOf="@id/voucher_line"
            app:layout_constraintTop_toTopOf="@id/voucher_title" />

        <TextView
            android:id="@+id/voucher_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Giảm 40% đơn giá"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_4"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/voucher_shop"
            app:layout_constraintTop_toBottomOf="@id/voucher_shop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cho thành viên đồng của shop"
            android:textSize="@dimen/textsize_3"
            app:layout_constraintStart_toStartOf="@id/voucher_shop"
            app:layout_constraintTop_toBottomOf="@id/voucher_percent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HSD: 15/03/2020"
            android:textSize="@dimen/textsize_3"
            app:layout_constraintBottom_toBottomOf="@id/voucher_title"
            app:layout_constraintStart_toStartOf="@id/voucher_shop" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/bg_voucher"
        app:layout_constraintTop_toTopOf="parent">

