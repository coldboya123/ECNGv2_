            android:textSize="@dimen/textsize_3"
            app:layout_constraintStart_toStartOf="@id/voucher_shop2"
            app:layout_constraintTop_toBottomOf="@id/voucher_percent2" />

        <TextView
            android:layout_width="wrap_content"
