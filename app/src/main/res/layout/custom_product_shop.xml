<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="140dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/product_shop_img"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/laptop5"/>
        <TextView
            android:id="@+id/product_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Laptop dell ...."
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/product_shop_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33.000.000đ"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/product_shop_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_color"
            android:text="30.000.000đ"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>