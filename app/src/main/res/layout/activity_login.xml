<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_banner"
        android:layout_width="220dp"
        android:layout_height="210dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/fa"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:focusableInTouchMode="true"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="35dp"
        android:id="@+id/login_tf_user"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:hint="User Name"
        app:endIconMode="clear_text"
        app:boxStrokeColor="@color/primary_color"
        app:hintTextColor="@color/primary_color"
        app:layout_constraintTop_toBottomOf="@id/login_banner"
        app:layout_constraintBottom_toTopOf="@id/login_tf_pwd"
        app:layout_constraintVertical_weight="1"
        app:boxStrokeErrorColor="@color/primary_color">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_txt_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:focusableInTouchMode="true"
        android:id="@+id/login_tf_pwd"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="35dp"
        android:layout_height="0dp"
        android:hint="Password"
        app:endIconMode="password_toggle"
        app:boxStrokeColor="@color/primary_color"
        app:hintTextColor="@color/primary_color"
        app:layout_constraintTop_toBottomOf="@id/login_tf_user"
        app:layout_constraintBottom_toTopOf="@id/login_btn_login"
        app:layout_constraintVertical_weight="1">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_txt_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:padding="0dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/login_tf_pwd"
        android:id="@+id/login_btn_login"
        app:layout_constraintBottom_toTopOf="@id/login_txtor"
        android:layout_marginHorizontal="35dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/background_radius_primary_color"
        app:layout_constraintVertical_weight="1"/>

    <LinearLayout
        android:id="@+id/login_txtor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/login_btn_login"
        app:layout_constraintBottom_toTopOf="@id/login_btn_facebook"
        app:layout_constraintVertical_weight="0.7"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_weight="5"
            android:background="@color/dark" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="OR" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:layout_weight="5"
            android:background="@color/dark" />
    </LinearLayout>

    <Button
        android:id="@+id/login_btn_facebook"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/com_facebook_button_background_color"
        android:text="Login with Facebook"
        android:layout_marginHorizontal="35dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/login_txtor"
        app:layout_constraintBottom_toTopOf="@id/login_btn_google"
        app:layout_constraintVertical_weight="1"/>

    <Button
        android:id="@+id/login_btn_google"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="35dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorGoogle"
        android:text="Login with Google"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/login_btn_facebook"
        app:layout_constraintBottom_toTopOf="@id/login_forgot_pwd"
        app:layout_constraintVertical_weight="1"/>

    <TextView
        android:id="@+id/login_forgot_pwd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Forgot pasword"
        android:textColor="@color/primary_color"
        app:layout_constraintTop_toBottomOf="@id/login_btn_google"
        app:layout_constraintBottom_toTopOf="@id/login_register_block"
        app:layout_constraintVertical_weight="0.6"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/login_register_block"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toBottomOf="@id/login_forgot_pwd"
        app:layout_constraintVertical_weight="0.6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Don't have a account? " />

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Register"
            android:textColor="@color/primary_color" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
