<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_2"
    tools:context=".View.SettingAccount.SettingAccountActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_settingacc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:background="@drawable/appbar_background"
            app:layout_collapseMode="pin"
            android:layout_gravity="bottom">
            <Button
                android:id="@+id/settingacc_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thiết lập tài khoản"
                android:textColor="@color/white"
                android:background="@null"
                android:drawableLeft="@drawable/ic_back_shop"
                android:layout_marginEnd="10dp"
                android:drawablePadding="10dp"
                android:textAllCaps="false"
                android:textSize="18sp"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingacc_block_profile"
        app:layout_constraintTop_toBottomOf="@id/appbar_settingacc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <TextView
            android:id="@+id/settingacc_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hồ sơ cá nhân"
            android:textColor="@color/black"
            android:gravity="center"/>
        <ImageView
            app:layout_constraintTop_toTopOf="@id/settingacc_profile"
            app:layout_constraintBottom_toBottomOf="@id/settingacc_profile"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next_small"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingacc_block_address"
        app:layout_constraintTop_toBottomOf="@id/settingacc_block_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <TextView
            android:id="@+id/settingacc_address"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textColor="@color/black"
            android:gravity="center"/>
        <ImageView
            app:layout_constraintTop_toTopOf="@id/settingacc_address"
            app:layout_constraintBottom_toBottomOf="@id/settingacc_address"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next_small"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingacc_block_language"
        app:layout_constraintTop_toBottomOf="@id/settingacc_block_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <TextView
            android:id="@+id/settingacc_language"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ngôn ngữ"
            android:textColor="@color/black"
            android:gravity="center"/>
        <ImageView
            app:layout_constraintTop_toTopOf="@id/settingacc_language"
            app:layout_constraintBottom_toBottomOf="@id/settingacc_language"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next_small"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        app:layout_constraintTop_toBottomOf="@id/settingacc_block_profile"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_2"
        android:layout_marginHorizontal="15dp"/>
    <View
        app:layout_constraintTop_toBottomOf="@id/settingacc_block_address"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_2"
        android:layout_marginHorizontal="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>