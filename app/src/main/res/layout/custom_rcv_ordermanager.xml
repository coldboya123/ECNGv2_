<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="10dp">
    <TextView
        android:id="@+id/ordermanager_txtshop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cửa hàng: "
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/ordermanager_shop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ordermanager_txtshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shop name"
        android:textColor="@color/primary_color"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/ordermanager_txtorderid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ordermanager_orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đơn hàng "
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/ordermanager_orderid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456789"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/ordermanager_ordertime"
        app:layout_constraintTop_toBottomOf="@id/ordermanager_shop"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt hàng lúc 08:20 15/03/2021"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/ordermanager_ordershipping"
        app:layout_constraintTop_toBottomOf="@id/ordermanager_ordertime"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Kho trung chuyển Tân Bình]"
        android:drawableStart="@drawable/ic_shipping"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:textColor="@color/primary_color"/>
    <ImageView
        android:id="@+id/ordermanager_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginVertical="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/ordermanager_ordershipping"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ordermanager_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/ordermanager_img"
        app:layout_constraintEnd_toStartOf="@id/ordermanager_product_price"
        app:layout_constraintStart_toEndOf="@id/ordermanager_img"
        app:layout_constraintTop_toTopOf="@id/ordermanager_img">

        <TextView
            android:id="@+id/ordermanager_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ordermanager_product_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/dark_2"
            android:maxLines="2"
            android:paddingHorizontal="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ordermanager_product_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/ordermanager_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="@id/ordermanager_img"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>